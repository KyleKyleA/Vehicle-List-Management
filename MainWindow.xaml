<Window x:Class="CarListManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarListManagement"
        mc:Ignorable="d"
        Title="Vehicle Inventory" Height="450" Width="800"
        Loaded="Window_Loaded"
        ResizeMode="CanResize">

    <!-- Main Grid for the entire window -->
    <Grid Background="#FF1A86FF" Margin="0,0,0,-1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="9*"/>
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Menu Bar at the top left on the window -->
            <Menu Grid.Row="0" Grid.ColumnSpan ="2" Background="White" FontSize="12" Height="25">
                <MenuItem Header="_File" ToolTip="Allows you to create new file, save, and open">
                    <MenuItem Header="_New" Click="NewMenuItem_Click" ToolTip="Allows you create a new file"/>
                    <MenuItem Header="_Save" Click="SaveMenuItem_Click" ToolTip="Allows you to save it as a json file"/>
                    <MenuItem Header="_Open" Click="OpenMenuItem_Click" ToolTip="Allows you to open a json file"/>
                    <Separator/>
                </MenuItem>
                <MenuItem Header="Edit" ToolTip="Allows you to copy and paste the input from data grid">
                    <MenuItem Header="_Copy" Click="CopyMenuItem_Click" ToolTip="Allows you to copy input from vehicle input tab"/>
                    <MenuItem Header="_Paste" Click="PasteMenuItem_Click" ToolTip="Allows you to paste input from data grid tab into vehicle input tab"/>
                </MenuItem>
            </Menu>
        </Grid>


        <!-- Tabs for the following headings -->
        <TabControl Grid.Row="1" Margin="30,34,30,33" Background="White" BorderThickness="0" RenderTransformOrigin="0.543,0.559" Grid.ColumnSpan="2" Grid.RowSpan="2">

            <!-- Input Tab -->
            <TabItem Header="Vehicle Input">
                <Grid Background="White" Margin="20" VerticalAlignment="Top" HorizontalAlignment="Center" Width="400">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Car brand or vehicle brand-->
                    <Label x:Name="Make" Content="Make:" Grid.Row="0" Grid.Column="0" 
                       Foreground="Black" Margin="5" VerticalAlignment="Center"/>
                    <ComboBox x:Name="MakeCar" Grid.Row="0" Grid.Column="1" Width="200"
                          ToolTip="Model Make for cars"/>

                    <!-- Car or Vehicle Model -->
                    <Label x:Name="Model" Content="Model:" Grid.Row="1" Grid.Column="0" 
                       Foreground="Black" Margin="5" VerticalAlignment="Center"/>
                    <TextBox x:Name="ModelName" Grid.Row="1" Grid.Column="1" Width="200"
                         ToolTip="Model of the car"/>

                    <!-- Year of the Car or vehicle -->
                    <Label x:Name="Year" Content="Year:" Grid.Row="2" Grid.Column="0" 
                       Foreground="Black" Margin="5" VerticalAlignment="Center"/>
                    <ComboBox x:Name="CarYear" Grid.Row="2" Grid.Column="1" Width="200"
                          ToolTip="Year of the car"/>

                    <!-- Price of the car -->
                    <Label x:Name="Price" Content="Price:" Grid.Row="3" Grid.Column="0" 
                       Foreground="Black" Margin="5" VerticalAlignment="Center"/>
                    <TextBox x:Name="PriceCar" Grid.Row="3" Grid.Column="1" Width="200"
                         ToolTip="Price of the car"/>

                    <!-- Determines if the car is new or used by using a check box  -->
                    <Label x:Name="New" Content="New:" Grid.Row="4" Grid.Column="0" 
                       Foreground="Black" Margin="0,4,9,0" VerticalAlignment="Top"
                       ToolTip="Is the car new or used"/>
                    <CheckBox x:Name="NewOrUsed" Grid.Row="4" Grid.Column="1"
                          ToolTip="Check Yes for New or leave it for used"
                          Checked="NewOrUsed_Checked" Margin="12,10,-12,26"/>
                    <!-- Combo Box for either choosing a car or vehicle(JetSki) -->
                    <Label x:Name="VehicleType" Content="Vehicle Type:" Grid.Row="4" 
                       Foreground="Black" VerticalAlignment="Top" RenderTransformOrigin="0.263,0.433" Margin="-2,31,2,0"/>
                    <!-- Created a combo box for the vehicle type whether they choose Car or Vehicle-->
                    <ComboBox x:Name="VehicleTypeComboBox" Grid.Row="4" Grid.Column="1" Margin="0,30,0,0" ToolTip="Select vehicle type">
                        <ComboBoxItem Content="Car" IsSelected="True"/>
                        <ComboBoxItem Content="Jetski"/>
                    </ComboBox>
                    <!-- Bottom Button Stack Panel Which are Enter and Reset Buttons Only in -->
                    <Button x:Name="EnterBtn" Content="_Enter" Width="100" Height="40"
                        Click="EnterBtn_Click" ToolTip="Helps with entering an existing or new car entry" Margin="244,97,-22,-80" Grid.Row="4" Grid.Column="1"/>
                    <!-- Bottom Button Stack Panel-->
                    <Button x:Name="ResetBtn" Content="Rese_t" Width="100" Height="40" Margin="342,97,-142,-80"
                    Click="ResetBtn_Click" ToolTip="Helps with resetting the window" Grid.Row="4" Grid.Column="1"/>

                </Grid>
            </TabItem>


            <!-- Data Grid Tab -->
            <TabItem Header="Vehicle Inventory">
                <Grid Background="White" Margin="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="13*"/>
                        <ColumnDefinition Width="708*"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="dgCarInventory"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          AlternatingRowBackground="LightGray"
                          GridLinesVisibility="All"
                          SelectionChanged="dgCarInventory_SelectionChanged" Grid.ColumnSpan="2" Margin="0,0,33,58">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Header="New" Binding="{Binding IsNew}" Width="60"/>
                            <DataGridTextColumn Header="Vehicle Type" Binding="{Binding VehicleType}" Width="100"/>
                            <DataGridTextColumn Header="ID" Binding="{Binding CarID}" Width="60"/>
                            <DataGridTextColumn Header="Make" Binding="{Binding Make}" Width="120"/>
                            <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="120"/>
                            <DataGridTextColumn Header="Year" Binding="{Binding Year}" Width="80"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=C}" Width="100"/>
                            <DataGridTextColumn Header="Max Speed" Binding="{Binding MaxSpeed, StringFormat=N0}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <!-- Remove button -->
                    <Button x:Name="RemoveButton" Content="Rem_ove" Grid.Column="1" Margin="585,256,8,0" Height="40" VerticalAlignment="Top" ToolTip="Remove a selected vehicle from the data grid" Click="RemoveButton_Click"/>
                </Grid>
            </TabItem>

            <!-- Statistics Tab -->
            <TabItem Header=" Vehicle Statistics" >
                <Grid Background="AntiqueWhite" Margin="16,0,15,0" Height="269">
                    <Label Content="Number of Vehicles:" FontSize="15" FontWeight="Bold" Margin="18,0,22,238"/>
                    <TextBlock x:Name="VehicleNumber" HorizontalAlignment="Left" Margin="177,11,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="219" Background="White"/>
                    <Label Content="Total Price of Entered Vehicles:" HorizontalAlignment="Left" Margin="7,37,0,0" VerticalAlignment="Top" Width="188" FontWeight="Bold"/>
                    <TextBlock x:Name="TotalPrice" HorizontalAlignment="Left" Margin="197,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="195" Background="White"/>
                    <Label Content="Average Price of Vehicles: " HorizontalAlignment="Left" Margin="14,68,0,0" VerticalAlignment="Top" Width="158" FontWeight="Bold"/>
                    <TextBlock x:Name="AveragePrice" HorizontalAlignment="Left" Margin="173,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="224" Background="White"/>
                    <Button x:Name="ExitBtn" Content="E_xit"
                        Click="ExitBtn_Click" ToolTip="Exits out of the program" Margin="628,274,-2,-29" Background="#FF80C614"/>

                </Grid>
            </TabItem>
        </TabControl>





        <!-- Botton Panel -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left"
                Margin="15,199,0,-164" Width="800" Grid.ColumnSpan="2" Grid.RowSpan="3">
            <!-- StatusBar docked to the left -->
            <StatusBar x:Name="UpdateStatus" DockPanel.Dock="Left" Width="400" Background="#FF85A8FF" Height="35">
                <StatusBarItem Height="35" Width="500" Margin="0,-4,0,5">
                    <TextBlock x:Name="StatusTextBlock" Text="Ready" FontWeight="Bold" Foreground="Black" ToolTip="Status for Adding, Time, Resetting" Width="500"/>
                </StatusBarItem>
            </StatusBar>
            <TextBlock x:Name="ResultBox"  Width="0" Background="#FF85A8FF" Height="36"/>
            <Label Content="Result Box" HorizontalAlignment="Left" Margin="645,0,0,0" VerticalAlignment="Center" Grid.Row="1" ToolTip="Displays it works when added a car" Width="65" Height="29" Grid.Column="1"/>

        </StackPanel>





    </Grid>
</Window>
